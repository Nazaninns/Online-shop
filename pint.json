{
    "preset": "laravel",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "blank_line_after_namespace": true,
        "blank_line_after_opening_tag": true,
        "blank_line_before_statement": {
            "statements": [
                "return"
            ]
        },
        "class_definition": {
            "single_line": true
        },
        "concat_space": {
            "spacing": "one"
        },
        "encoding": true,
        "lowercase_keywords": true,
        "constant_case":  true,
        "no_extra_blank_lines": {
            "tokens": [
                "extra",
                "throw",
                "use",
                "use_trait"
            ]
        },
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "single_quote": true,
        "trailing_comma_in_multiline": {
            "elements": [
                "arrays"
            ]
        },
        "visibility_required": {
            "elements": [
                "method",
                "property"
            ]
        }
    }
}
